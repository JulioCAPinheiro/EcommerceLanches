@model Lanche

<div class="container">
    <div class="row">
        <div class="card">

            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="Foto do lanche" />
            </div>

            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2>
                <p class="card-text">@Model.DescricaoDetalhada</p>

                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">Ver todos os lanches</a>
                    <a asp-controller="CarrinhoCompras" id="cartButton" asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId" class="btn btn-primary">Adicionar @Model.Nome ao Carrinho</a>
                </p>
            </div>

        </div>
    </div>
</div>