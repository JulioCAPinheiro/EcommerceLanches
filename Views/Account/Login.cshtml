 @model LoginViewModel

<table class="table">
    <tr>
        <td class="w-25 h-25"><img src="~/images/Login.jpeg" alt="Fazer o Login" class="w-25 h-25" /></td>
        <td>
            <div class="row">
                <div class="col-10 col-md-10 col-lg-10">
                    <h4>Login</h4>
                    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            <label asp-for="UserName" class="col-md-2 control-label">Nome</label>
                            <div class="col-md-6">
                                <input asp-for="UserName" class="form-control" placeholder="Digite o nome do usuario" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="col-md-2 control-label">Senha</label>
                            <div class="col-md-6">
                                <input asp-for="Password" class="form-control" placeholder="Digite a sua senha" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8">
                                <input type="submit" class="btn btn-success" value="Log in" />
                            </div>
                        </div>
                    </form>
                    <a asp-action="Register" asp-controller="Account">Não tem uma conta se registre aqui !</a>
                </div>
            </div>
        </td>
    </tr>
</table>