@model Ecommerce.Models.Lanche

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1>Criar</h1>

    <h4>Lanche</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" required />
                    <div class="invalid-feedback">
                        @Html.ValidationMessageFor(model => model.Nome)
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DescricaoCurta" class="form-label">Descrição Curta</label>
                    <input asp-for="DescricaoCurta" class="form-control" required />
                    <div class="invalid-feedback">
                        @Html.ValidationMessageFor(model => model.DescricaoCurta)
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DescricaoDetalhada" class="form-label"></label>
                    <input asp-for="DescricaoDetalhada" class="form-control" />
                    <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Preco" class="form-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImagemUrl" class="form-label"></label>
                    <input asp-for="ImagemUrl" class="form-control" />
                    <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImagemThumbnailUrl" class="form-label"></label>
                    <input asp-for="ImagemThumbnailUrl" class="form-control" />
                    <span asp-validation-for="ImagemThumbnailUrl" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsLanchePReferido" /> @Html.DisplayNameFor(model => model.IsLanchePReferido)
                    </label>
                </div>

                <div class="mb-3 form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="EmEstoque" /> @Html.DisplayNameFor(model => model.EmEstoque)
                    </label>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoriaId" class="form-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId" required></select>
                    <div class="invalid-feedback">
                        @Html.ValidationMessageFor(model => model.CategoriaId)
                    </div>
                </div>
 

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
